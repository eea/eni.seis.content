<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

  <tal:col metal:fill-slot="portlets_one_slot"></tal:col>
  <tal:col metal:fill-slot="portlets_two_slot"></tal:col>

  <body metal:fill-slot="content-core"
        tal:define="country python:context;
                    country_title python:country.Title()">

    <div class="row no-portlets">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="country-header">
          <img class="flag pull-left" src="./flag/@@images/image/preview" alt="flag"/>
          <h1 class="country-title" tal:content="country_title">
            Country title
          </h1>
        </div>

        <div class="country-content">
          <ul class="nav nav-tabs">
            <li class="pull-right">
              <a data-toggle="tab" href="#environmental-assessment-reports">
                Environmental assessment reports
              </a>
            </li>
            <li class="active pull-right">
              <a data-toggle="tab" href="#unece-environmental-indicators">
                UNECE Environmental Indicators
              </a>
            </li>
         </ul>

          <div class="tab-content">
            <div id="unece-environmental-indicators" class="tab-pane active">
              <p>Description of folder 1 here? TODO</p>

              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"
                tal:define="
                  query python: {'portal_type': 'Folder'};
                  tabs python: context.getFolderContents(query, full_objects=True)">

                <ul class="nav nav-tabs">
                  <tal:tab tal:repeat="tab tabs">
                  <li tal:attributes="class python:'active' if not repeat['tab'].index else ''">
                    <a tal:attributes="href string:#${tab/getId};" data-toggle="tab">
                      <span tal:replace="tab/Title">Tab Title</span>
                    </a>
                  </li>
                  </tal:tab>
                </ul>

                <div class="tab-content">
                  <tal:tab tal:repeat="tab tabs" >

                  <div tal:attributes="
                  id tab/getId;
                  class python:'tab-pane active' if not repeat['tab'].index else 'tab-pane'"
                     class="tab-pane active"
                     data-toggle="pill">

                    <div class="container">
                      <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                          <a class="btn btn-default edit-text"
                             href=""
                             tal:attributes="href string:${tab/absolute_url}/edit">
                            Edit this text
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>

                </tal:tab>
              </div>
            </div>

            </div>
            <div id="environmental-assessment-reports" class="tab-pane fade">
              <table class="table table-responsive table-hover" summary="Content listing">
                <thead>
                  <tr>
                    <th>
                      <h2>&nbsp;Type of Report&nbsp;</h2>
                    </th>
                    <th>
                      <h2>&nbsp;<span tal:replace="country_title"></span>&nbsp;</h2>
                    </th>
                    <th><!-- Link to the report --></th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="odd">
                    <td>Odd line</td>
                    <td>Odd line</td>
                    <td>Odd line</td>
                  </tr>
                  <tr class="even">
                    <td>Even line</td>
                    <td>Even line</td>
                    <td>Even line</td>
                  </tr>
                  <tr class="odd">
                    <td>Odd line</td>
                    <td>Odd line</td>
                    <td>Odd line</td>
                  </tr>
                  <tr class="even">
                    <td>Even line</td>
                    <td>Even line</td>
                    <td>Even line</td>
                  </tr>
                </tbody>
              </table>
            </div>

            <div tal:condition="python:False" class="not-used-TODO-remove">
              <!-- context decription -->
              <a class="btn btn-default edit-text"
                 href=""
                 tal:attributes="href string:${context/absolute_url}/edit">
                Edit this text
              </a>`
              <div tal:content="structure context/long_description" ></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row no-portlets">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="news-container">

          <tal:def tal:define="news python:country.getLocalNews()[:3];
            toLocalizedTime nocall: context/@@plone/toLocalizedTime; ">

            <div class="row news-row">
              <div tal:repeat="ni news" class="col-lg-4 col-md-4 col-sm-12
                col-xs-12">

                <div class="news-image pull-left">
                  <a href="" tal:attributes="href ni/absolute_url" title="" >
                    <img tal:attributes="src python:ni.getLeadImagePath('thumb', 'newsitem-fallback.png')" />
                  </a>
                </div>

                <div class="news-details">
                  <a tal:attributes="href ni/absolute_url" title="" tal:content="ni/Title">Title</a>
                </div>

              </div>
            </div>

            <a href="eni-seis.eionet.europa.eu/east/communication/newsletter" class="pull-right more-items">More news</a>
          </tal:def>

        </div>
      </div>
    </div>


  </body>
</html>
