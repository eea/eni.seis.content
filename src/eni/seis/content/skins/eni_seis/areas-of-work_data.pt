<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

  <tal:col metal:fill-slot="portlets_one_slot"></tal:col>
  <tal:col metal:fill-slot="portlets_two_slot"></tal:col>

  <body metal:fill-slot="content-core">
    <div class="homepage-section-aow-slider row">
      <div class="col-md-3 col-xs-12 col-sm-6">
        <div class="aow-slide">
          <a href="/east/areas-of-work/Data%20and%20Statistics">
            <div class="img-circle-cropper">
              <img class="slide-img" src="http://eni-seis.eionet.europa.eu/east/++theme++eni-seis-theme-latest/img/img-east-environmental-reporting.jpg">
            </div>
            <div class="text">
              <span>Data and Statistics</span>
            </div>
          </a>
        </div>
      </div>
      <div class="col-md-3 col-xs-12 col-sm-6">
        <div class="aow-slide">
          <a href="/east/areas-of-work/data-management-and-infrastructure">
            <div class="img-circle-cropper">
              <img class="slide-img" src="http://eni-seis.eionet.europa.eu/east/++theme++eni-seis-theme-latest/img/img-east-data-management-and-infrastructure.jpg">
            </div>
            <div class="text">
              <span>Data management and infrastructure</span>
            </div>
          </a>
        </div>
      </div>
      <div class="col-md-3 col-xs-12 col-sm-6">
        <div class="aow-slide">
          <a href="/east/areas-of-work/Indicators%20and%20Assessments">
            <div class="img-circle-cropper">
              <img class="slide-img" src="http://eni-seis.eionet.europa.eu/east/++theme++eni-seis-theme-latest/img/img-east-assessment.jpg">
            </div>
            <div class="text">
              <span>Indicators and Assessments</span>
            </div>
          </a>
        </div>
      </div>
    </div>

    <div class="row no-portlets">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <tal:resources tal:define="
          query python: {'portal_type': 'Folder'};
          sections python: context.getFolderContents(query, full_objects=True)">

          <div class="knowledge-resources"
               tal:repeat="section sections">
            <h3 tal:content="section/Title">Knowledge resources zzz</h3>
            <ul tal:define="contents section/getFolderContents"
                class="list-group">
              <li tal:repeat="brain contents" class="list-group-item">
                <a href="" tal:attributes="href brain/getURL">
                  <span tal:replace="brain/Title">Title here</span>
                </a>
              </li>
            </ul>
            <a tal:attributes="href section/absolute_url"
               class="more-items pull-right">
              More
              <span tal:replace="section/Description"></span>
            </a>
          </div>
        </tal:resources>
      </div>

    </div>
  </body>
</html>
